<%= render 'layouts/vheader' %>
<div class="container">
  <div class="box">
    <div class="col-md-12">
      <%= link_to 'New', new_announcement_path %>
      <table class="table">
          <thead>
            <tr>
              <th>Title</th>
            </tr>
          </thead>
            <% @announcement.each do |announcement| %>
            <tr>
              <td><%= announcement.title %></td>
              <td><%= link_to 'Show', announcement_path(announcement) %></td>
              <td><%= link_to 'Edit', edit_announcement_path(announcement) %></td>
            </tr>
          <% end %>
        </table>
      </table>
    </div>
  </div>

</div>
