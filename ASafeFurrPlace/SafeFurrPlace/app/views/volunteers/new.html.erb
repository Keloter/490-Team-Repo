<% @page_title = "UserAuth | Signup" %>
<div class="well well-lg">
<div class="Sign_Form">
  <h1>Sign Up</h1>
  <%= form_for(:volunteer, :url => {:controller => 'volunteers', :action => 'create'}) do |f| %>
    <p> Username:</br> <%= f.text_field :username%> </p>
    <p> Email:</br> <%= f.text_field :email%> </p>
    <p> Password:</br> <%= f.password_field :password%></p>
    <p> Password Confirmation:</br> <%= f.password_field :password_confirmation%> </p>
    <%= f.submit :Signup %>
  <% end %>
  <% if @volunteer.errors.any? %>
    <ul class="Signup_Errors">
    <% for message_error in @volunteer.errors.full_messages %>
      <li>* <%= message_error %></li>
    <% end %>
    </ul>
  <% end %>
</div>
</div>